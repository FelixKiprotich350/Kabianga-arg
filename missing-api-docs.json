{
  "missing_report_endpoints": {
    "/api/v1/reports/themes": {
      "get": {
        "tags": ["Reports"],
        "summary": "Get research themes report",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "Themes report with proposal counts and chart data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "chartData": {"type": "object"},
                    "themes": {"type": "array"},
                    "totalThemes": {"type": "number"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/reports/grants": {
      "get": {
        "tags": ["Reports"],
        "summary": "Get grants report",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "Grants report with proposal counts, funding data and chart data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "chartData": {"type": "object"},
                    "grants": {"type": "array"},
                    "totalGrants": {"type": "number"},
                    "activeGrants": {"type": "number"},
                    "totalFunding": {"type": "number"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/reports/schools": {
      "get": {
        "tags": ["Reports"],
        "summary": "Get schools report",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "Schools report with departments and proposals data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "chartData": {"type": "object"},
                    "schoolData": {"type": "array"},
                    "totalSchools": {"type": "number"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/reports/departments": {
      "get": {
        "tags": ["Reports"],
        "summary": "Get departments report",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "Departments report with users, proposals and approval statistics",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "departmentData": {"type": "array"},
                    "totalDepartments": {"type": "number"}
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "enhanced_existing_endpoints": {
    "/api/v1/reports/export": {
      "post": {
        "tags": ["Reports"],
        "summary": "Export reports in JSON format",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["summary", "proposals", "projects", "users", "themes", "grants", "schools", "departments"],
                    "description": "Type of report to export"
                  },
                  "format": {
                    "type": "string",
                    "enum": ["json"],
                    "default": "json",
                    "description": "Export format (currently only JSON supported)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Report exported successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {"type": "boolean"},
                    "report_type": {"type": "string"},
                    "format": {"type": "string"},
                    "generated_at": {"type": "string"},
                    "data": {"type": "object"}
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}